        <!--<mvc:interceptor>-->
            <!--<mvc:mapping path="/restaurant/*/admin/**"/>-->
            <!--<bean class="com.campusCloudStorage.interceptor.AdminInterceptor"></bean>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->

</beans>